println("// assignment test for basic types");
{
	i32 i = 1; f32 f = 2.2; bool b = true; string s = "test";// enum e = :TEST;
	// lhs test
	if 1       != i { println("Test Failed, " + FILELINE); }
	if 2.2     != f { println("Test Failed, " + FILELINE); }
